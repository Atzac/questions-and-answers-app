<body> 
    <%- include ('partials/navbar.ejs'); %>

    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header">
                <h3>Realizar uma pergunta</h3>
            </div>

            <div class="card-body">
                <form method="post" action="/saveQuestion">
                    <label>Título</label>
                    <input type="text" name="titulo" placeholder="Título" class="form-control" required>
                    <br>
                    <label>Descrição</label>
                    <textarea type="text" name="descricao" placeholder="Descreva sua pergunta" class="form-control" required></textarea>
                    <br>
                    <button class="btn btn-success">Perguntar</button>
                    <a href="/" class="btn btn-outline-dark">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('partials/header.ejs'); %>
<body> 
    <%- include ('partials/navbar.ejs'); %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between p-2 d-flex mb-2">
            <h3>Perguntas</h3>
            <a href="/ask" class="btn btn-outline-info">Fazer uma pergunta</a>
        </div>

        <hr>

        <% asks.forEach(ask => { %>
           <div class="card mt-4 shadow">
               <div class="card-body">
                    <h5><%= ask.title %></h5>
                    <br>
                    <p><%= ask.description %></p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Responder</button>
                </div>
           </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>
 